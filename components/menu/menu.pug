mixin menu__template()
  .menu&attributes(attributes)
    .menu__items
    script(id="tmpl-sidebar-menu" type="text/x-handlebars-template")
        p.menu__item( data-content-id="{{content_id}}")
          a(href='{{href}}') {{title}}
        
  block



mixin menu( menu_active_item )
  .menu( data-item=menu_active_item )&attributes(attributes)
    for item in menu_items
      - var classes = ['menu__item'];
      - if(item.title) {
      - if (menu_items[menu_active_item-1] == item) {
      -    classes.push('menu__item_active');
      - }
          p(class = classes)
            a(href=item.url) #{item.title} 
      - } else {
          .menu__line
      -    menu_active_item++
      -  }
    +btns()


  block

